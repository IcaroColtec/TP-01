<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filme"
        android:textSize="20dp"
        android:text="Filme:"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/genero"
        android:textSize="20dp"
        android:text="Genero:"/>

    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filme"
        android:id="@+id/diretor"
        android:text="Diretor:"/>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/diretor"
        android:id="@+id/lancamento"
        android:text="Lançamento:"/>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lancamento"
        android:id="@+id/idade"
        android:text="Faixa Etária:"/>
    <Button
        android:id="@+id/botaoAdicionarFilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>